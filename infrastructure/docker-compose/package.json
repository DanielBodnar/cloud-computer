{
  "author": "Jackson Delahunt <jackson@jacksondelahunt.com>",
  "description": "The Cloud Computer Docker-Compose Configuration",
  "license": "MIT",
  "name": "@cloud-computer/docker-compose",
  "repository": "git@github.com:cloud-computer/cloud-computer.git",
  "scripts": {
    "compose": "scripts/compose.sh",
    "down": "yarn down:code & yarn down:docker & yarn down:grafana & yarn down:ingress & yarn down:jaeger & yarn down:xpra & wait; yarn down:terminal",
    "down:code": "yarn compose -f stacks/code.yaml down",
    "down:docker": "yarn compose -f stacks/docker.yaml down",
    "down:grafana": "yarn compose -f stacks/grafana.yaml down",
    "down:ingress": "yarn compose -f stacks/ingress.yaml down",
    "down:jaeger": "yarn compose -f stacks/jaeger.yaml down",
    "down:terminal": "yarn compose -f stacks/terminal.yaml down",
    "down:xpra": "yarn compose -f stacks/xpra.yaml down",
    "reload": "yarn --cwd ../docker ps:q --filter name=cloud-computer | xargs -n 1 -P $(cat /proc/cpuinfo | grep processor | wc -l) yarn --cwd ../docker docker restart",
    "restart": "yarn down; yarn up",
    "restart:code": "yarn down:code; yarn up:code",
    "restart:docker": "yarn down:docker; yarn up:docker",
    "restart:grafana": "yarn down:grafana; yarn up:grafana",
    "restart:ingress": "yarn down:ingress; yarn up:ingress",
    "restart:istio": "yarn down:istio; yarn up:istio",
    "restart:jaeger": "yarn down:jaeger; yarn up:jaeger",
    "restart:terminal": "yarn down:terminal; yarn up:terminal",
    "restart:xpra": "yarn down:xpra; yarn up:xpra",
    "rm": "yarn --cwd ../docker docker rm -f \"$@\" 2>/dev/null",
    "up": "yarn up:code & yarn up:docker & yarn up:grafana & yarn up:ingress & yarn up:jaeger & yarn up:terminal & yarn up:xpra",
    "up:code": "yarn compose -f stacks/code.yaml up --detach --quiet-pull",
    "up:docker": "yarn compose -f stacks/docker.yaml up --detach --quiet-pull",
    "up:grafana": "yarn compose -f stacks/grafana.yaml up --detach --quiet-pull",
    "up:ingress": "yarn compose -f stacks/ingress.yaml up --detach --quiet-pull",
    "up:jaeger": "yarn compose -f stacks/jaeger.yaml up --detach --quiet-pull",
    "up:terminal": "yarn compose -f stacks/terminal.yaml up --detach --quiet-pull",
    "up:xpra": "yarn compose -f stacks/xpra.yaml up --detach --quiet-pull"
  },
  "version": "0.0.1"
}
